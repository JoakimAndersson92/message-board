<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/output.css">
    <title>message board</title>
</head>
<body class="bg-gray-800 min-h-screen text-white font-sans">
    <div class="container mx-auto py-10 px-4">
      <h1 class="text-3xl font-bold underline mb-8">
        Message Board
      </h1>
      <div class="bg-gray-700 rounded-lg p-6 shadow-lg">
        <% messages.forEach((data) => { %>
          <div class="mb-4 border-b border-gray-600 pb-4">
            <h3 class="font-semibold text-lg"><%= data.user %></h3>
            <p class="text-gray-300"> <%= data.text %></p>
            <p class="text-gray-500 text-sm"> <%= data.added %></p>
          </div>
        <% }) %>
      </div>
  
      <form method="post" action="/" onsubmit="setCurrentTime()" class="mt-8">
        <div class="mb-4">
          <label for="user" class="block text-sm mb-1">Name</label>
          <input type="text" name="user" class="bg-gray-600 rounded-lg w-full py-2 px-4 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600">
        </div>
        <div class="mb-4">
          <label for="text" class="block text-sm mb-1">Message</label>
          <input type="text" name="text" class="bg-gray-600 rounded-lg w-full py-2 px-4 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600">
        </div>
        <input type="hidden" id="timestamp" name="added">
        <button class="bg-blue-600 hover:bg-blue-700 py-2 px-6 rounded-lg font-semibold">Submit</button>
      </form>
    </div>
  </body>
  

<script>
    const timeInput = document.querySelector('#timestamp')
    function setCurrentTime() {
        const currentTime = new Date()
        timeInput.value = currentTime.toISOString()
    }

    timeInput.addEventListener('click', setCurrentTime)
</script>
</html>